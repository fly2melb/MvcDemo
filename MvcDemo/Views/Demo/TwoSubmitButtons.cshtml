
@{
    ViewBag.Title = "Two submit buttons";
}

<h2>@ViewBag.Title</h2>

<h3>
    <span class="label label-info">@ViewBag.Response</span>
</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <textarea class="form-control" rows="10" name="message"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Accept" name="Accept" class="btn btn-success" />
        <input type="submit" value="Decline" name="Decline" class="btn btn-danger" />
    </div>
}
